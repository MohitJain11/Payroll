<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LeaveApplicationActivity">

    <!--Action Bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/orange"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Leave Application"
            android:textColor="#ffffff"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:id="@+id/from_date"
                android:layout_weight="1"
                android:focusable="false"
                android:hint="@string/select_from_date"
                android:layout_margin="5sp"
                android:inputType="date"
                />
            <EditText
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:id="@+id/to_date"
                android:layout_weight="1"
                android:focusable="false"
                android:inputType="date"
                android:hint="@string/select_to_date"
                android:layout_margin="5sp"
                />
        </LinearLayout>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/leave_type"
            android:layout_margin="10sp"
            />

        <EditText
            android:inputType="textMultiLine"
            android:lines="3"
            android:minLines="2"
            android:gravity="top|left"
            android:maxLines="10"
            android:hint="@string/type_your_remark"
            android:layout_margin="10sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:id="@+id/remark"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:text="@string/submit"
            android:background="@color/orange"
            android:layout_margin="10sp"
            android:onClick="leaveSubmit"
            />
    </LinearLayout>
</LinearLayout>